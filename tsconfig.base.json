{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@@back/*": ["apps/back/src/*"],
      "@@chatbot/*": ["apps/chatbot/src/*"],
      "@assets": ["libs/assets/src/index.ts"],
      "@assets/*": ["libs/assets/src/*"],
      "@back-common/*": ["libs/back-common/src/*"],
      "@bright-resume/assets": ["libs/assets/src/index.ts"],
      "@bright-resume/assets/*": ["libs/assets/src/*"],
      "@bright-resume/back-common/*": ["libs/back-common/src/*"],
      "@bright-resume/components": ["libs/components/src/index.ts"],
      "@bright-resume/components/*": ["libs/components/src/lib/*"],
      "@bright-resume/errors": ["libs/errors/src/index.ts"],
      "@bright-resume/utils": ["libs/utils/src/index.ts"],
      "@chatbot-components": ["libs/chatbot-components/src/index.ts"],
      "@chatbot-components/*": ["libs/chatbot-components/src/*"],
      "@chatbot/*": ["apps/chatbot/*"],
      "@components": ["libs/components/src/index.ts"],
      "@components/*": ["libs/components/src/lib/*"],
      "@dto": ["libs/dto/src/index.ts"],
      "@enums": ["libs/enums/src/index.ts"],
      "@errors": ["libs/errors/src/index.ts"],
      "@libs/scss": ["libs/components/scss"],
      "@models": ["libs/models/src/index.ts"],
      "@resume-template-components/*": [
        "libs/resume-template-components/src/*"
      ],
      "@resume-template-components/server": [
        "libs/resume-template-components/src/server.ts"
      ],
      "@utils": ["libs/utils/src/index.ts"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "exclude": ["node_modules", "tmp"]
}
